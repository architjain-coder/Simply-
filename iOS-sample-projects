        // Use of camera
        AVCaptureDevice.requestAccess(for: AVMediaType.video) { response in
            if response {
                // If access is granted
            } else {
                // Otherwise
            }
        }
        
        return true
    }
    
    func completion(zone:[AdColonyZone]){
        print("completed")
        ViewController.done = true
        return;
    }

